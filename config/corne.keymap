};

combos {
    compatible = "zmk,combos";
    combo_sys_layer {
        timeout-ms = <50>;
        key-positions = <20 41>;
        bindings = <&to SYS>;
        layers = <DEF SYM NAV>;
    };
};

keymap {
    compatible = "zmk,keymap";

    default_layer {
        bindings = <
            &kp TAB &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U &kp I &kp O &kp P &td_bspc
